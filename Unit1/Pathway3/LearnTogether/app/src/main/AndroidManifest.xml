<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnTogether"
        tools:targetApi="31">
        <activity
            android:name=".DiceRollerActivity"
            android:exported="true"
            android:label="@string/title_activity_dice_roller"
            android:theme="@style/Theme.LearnTogether">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:exported="true"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.LearnTogether" />
        <activity
            android:name=".QuadrantActivity"
            android:exported="true"
            android:label="@string/title_activity_quadrant"
            android:theme="@style/Theme.LearnTogether" />
        <activity
            android:name=".TaskManagerActivity"
            android:exported="true"
            android:label="@string/title_activity_task_manager"
            android:theme="@style/Theme.LearnTogether" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LearnTogether" />
    </application>

</manifest>